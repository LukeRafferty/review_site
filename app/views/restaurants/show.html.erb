<h1> <%= @restaurant.name%> </h1>
<h5> <%= @restaurant.address%> </h5>
<h5> <%= @restaurant.city%> </h5>
<h5> <%= @restaurant.state%> </h5>
<h5> <%= @restaurant.zip_code%> </h5>
<p> <%= @restaurant.description%> </p>

<%= button_to "Add Review", new_restaurant_review_path(@restaurant), method: :get %>
<%= link_to "Refactor", edit_restaurant_path(@restaurant) %>
<% if current_user != nil && current_user.admin %>
  | <%= link_to "destroy", @restaurant, method: :delete,
                                data: { confirm: "You sure?" } %>
<% end %>

<div id="app">

</div>

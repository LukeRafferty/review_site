<%= form_for restaurants_path(@restaurant), method: "patch" do %>
  <label>Restaurant Name:</label></br>
  <%= text_field :name, @restaurant.name %></br>

  <label>Restaurant Address:</label></br>
  <%= text_field :address, @restaurant.address %></br>

  <label>Restaurant City:</label></br>
  <%= text_field :city, @restaurant.city %></br>

  <label>Restaurant State:</label></br>
  <%= text_field :state, @restaurant.state %></br>

  <label>Restaurant Zip Code:</label></br>
  <%= text_field :zip_code, @restaurant.zip_code %></br>

  <label>Restaurant Description:</label></br>
  <%= text_field :description, @restaurant.description %></br>

  <%= f.submit "Submit Edits" %>
  <% end %>

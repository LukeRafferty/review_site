<!-- for admins -->
<% if current_user != nil && current_user.admin %>

  <h1>New Restaurant Form</h1>

  <%= form_for(@restaurant) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :address %>
    <%= f.text_field :address %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :state %>
    <%= f.text_field :state %>

    <%= f.label :zip_code %>
    <%= f.text_field :zip_code %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit "Add Restaurant" %>

  <% end %>

<!-- for regular users -->
<% else %>
<div class="text-center">
  <h1>Oops! You must be an admin to view this page!</h1>
</div>
<% end %>

<div id="app">

</div>
